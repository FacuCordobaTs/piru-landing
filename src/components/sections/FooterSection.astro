---
const footerLinks = [
  { label: "Características", href: "#" },
  { label: "Cómo funciona", href: "#" },
  { label: "Precios", href: "#" },
  { label: "Contacto", href: "#" },
];
---

<footer class="relative bg-secondary px-6 py-24 overflow-hidden">
  <!-- Orange gradient blob -->
  <div class="absolute bottom-0 left-1/2 -translate-x-1/2 w-[800px] h-[600px] pointer-events-none">
    <div class="absolute inset-0 bg-linear-to-tr from-orange-300 via-orange-200 to-orange-100 opacity-30 blur-3xl rounded-full"></div>
  </div>

  <div class="relative max-w-6xl mx-auto">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-16 items-end">
      <!-- Logo and links -->
      <div>
        <h2 class="footer-logo text-6xl md:text-8xl font-sans font-bold text-foreground">
          PIRU
        </h2>
        <p class="text-muted-foreground mt-4 text-lg">La experiencia que hace que tus clientes vuelvan</p>

        <nav class="flex flex-wrap gap-6 mt-8">
          {footerLinks.map((link, i) => (
            <a
              href={link.href}
              class="footer-link text-muted-foreground hover:text-primary transition-colors"
              data-clickable
              data-index={i}
            >
              {link.label}
            </a>
          ))}
        </nav>

        <div class="flex gap-4 mt-8">
          <!-- Instagram -->
          <a
            href="https://www.instagram.com/piru.app"
            target="_blank"
            rel="noopener noreferrer"
            class="w-10 h-10 rounded-lg bg-background hover:bg-primary/10 flex items-center justify-center transition-colors"
            data-clickable
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-foreground">
              <rect width="20" height="20" x="2" y="2" rx="5" ry="5"/>
              <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/>
              <line x1="17.5" x2="17.51" y1="6.5" y2="6.5"/>
            </svg>
          </a>
          <!-- WhatsApp -->
          <a
            href="https://wa.me/543408681915?text=Hola!%20Me%20interesa%20PIRU%20para%20mi%20restaurante."
            target="_blank"
            rel="noopener noreferrer"
            class="w-10 h-10 rounded-lg bg-background hover:bg-primary/10 flex items-center justify-center transition-colors"
            data-clickable
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor" class="text-foreground">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
            </svg>
          </a>
          <!-- Email -->
          <a
            href="mailto:facucordoba200@gmail.com"
            class="w-10 h-10 rounded-lg bg-background hover:bg-primary/10 flex items-center justify-center transition-colors"
            data-clickable
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-foreground">
              <rect width="20" height="16" x="2" y="4" rx="2"/>
              <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/>
            </svg>
          </a>
        </div>
      </div>

      <!-- Contact form -->
      <div class="footer-form">
        <h3 class="text-2xl font-sans font-semibold text-foreground mb-4">Hablemos</h3>
        <p class="text-muted-foreground mb-6">Dejanos tu email y te contactamos para mostrarte PIRU.</p>
        <form id="footer-form" class="space-y-3">
          <input
            type="email"
            id="footer-email"
            placeholder="tu@email.com"
            required
            class="w-full bg-background border border-border rounded-lg px-4 py-3 text-foreground placeholder:text-muted-foreground focus:outline-none focus:ring-2 focus:ring-primary"
          />
          <button
            type="submit"
            class="w-full bg-primary hover:bg-primary/90 text-primary-foreground py-3 rounded-lg font-medium transition-colors"
            data-clickable
          >
            Enviar
          </button>
        </form>
      </div>
    </div>

    <div class="mt-16 pt-8 border-t border-border flex flex-col md:flex-row justify-between items-center gap-4">
      <p class="text-muted-foreground text-sm">© 2026 PIRU. Todos los derechos reservados.</p>
      <div class="flex gap-6">
        <a href="#" class="text-muted-foreground hover:text-foreground text-sm" data-clickable>
          Privacidad
        </a>
        <a href="#" class="text-muted-foreground hover:text-foreground text-sm" data-clickable>
          Términos
        </a>
      </div>
    </div>
  </div>
</footer>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const logo = document.querySelector('.footer-logo');
    const links = document.querySelectorAll('.footer-link');
    const form = document.querySelector('.footer-form');
    const emailInput = document.getElementById('footer-email') as HTMLInputElement;
    const formElement = document.getElementById('footer-form') as HTMLFormElement;

    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            if (entry.target === logo) {
              entry.target.classList.add('animate-fade-in-up');
            }
            if (entry.target === form) {
              entry.target.classList.add('animate-fade-in-up');
            }
            if (Array.from(links).includes(entry.target)) {
              const index = parseInt((entry.target as HTMLElement).dataset.index || '0');
              setTimeout(() => {
                entry.target.classList.add('animate-fade-in-up');
              }, index * 50);
            }
          }
        });
      },
      { threshold: 0.1 }
    );

    if (logo) observer.observe(logo);
    if (form) observer.observe(form);
    links.forEach((link) => observer.observe(link));

    if (formElement) {
      formElement.addEventListener('submit', (e) => {
        e.preventDefault();
        const email = emailInput?.value?.trim();
        if (email) {
          const subject = encodeURIComponent('Quiero conocer PIRU');
          const body = encodeURIComponent(`Hola! Soy ${email} y me gustaría conocer más sobre PIRU para mi restaurante.`);
          window.location.href = `mailto:facucordoba200@gmail.com?subject=${subject}&body=${body}`;
        }
      });
    }
  });
</script>

<style>
  .footer-logo {
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 0.8s ease, transform 0.8s ease;
  }

  .footer-logo.animate-fade-in-up {
    opacity: 1;
    transform: translateY(0);
  }

  .footer-link {
    opacity: 0;
    transform: translateY(20px);
    transition: opacity 0.8s ease, transform 0.8s ease;
  }

  .footer-link.animate-fade-in-up {
    opacity: 1;
    transform: translateY(0);
  }

  .footer-form {
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 0.8s ease, transform 0.8s ease;
  }

  .footer-form.animate-fade-in-up {
    opacity: 1;
    transform: translateY(0);
  }
</style>
