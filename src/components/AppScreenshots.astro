---

<section class="py-20 bg-neutral-900">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-4xl md:text-5xl font-bold text-white mb-4 font-serif">Explora la App</h2>
      <p class="text-xl text-slate-300 max-w-2xl mx-auto">
        Descubre cómo Piru.app combina hábitos, gamificación y progreso personal en una experiencia única
      </p>
    </div>

    <div class="relative max-w-sm mx-auto">
      <!-- Phone Frame -->
      <div class="relative bg-black rounded-[2.5rem] p-2 shadow-2xl">
        <div class="bg-black rounded-[2rem] overflow-hidden">
          <!-- Screenshot Container -->
          <div class="relative aspect-[9/19.5] overflow-hidden" id="screenshot-container">
            {screenshots.map((screenshot, index) => (
              <img
                src={screenshot.src || "/placeholder.svg"}
                alt={screenshot.alt}
                class={`absolute inset-0 w-full h-full object-cover transition-opacity duration-300 ${index === 0 ? 'opacity-100' : 'opacity-0'}`}
                data-screenshot-index={index}
              />
            ))}
          </div>
        </div>
      </div>

      <!-- Navigation Buttons -->
      <button
        id="prev-screenshot"
        class="absolute left-4 top-1/2 -translate-y-1/2 bg-white/10 border border-white/20 text-white hover:bg-white/20 rounded-md p-2 transition-colors"
      >
        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
      </button>

      <button
        id="next-screenshot"
        class="absolute right-4 top-1/2 -translate-y-1/2 bg-white/10 border border-white/20 text-white hover:bg-white/20 rounded-md p-2 transition-colors"
      >
        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
      </button>
    </div>

    <!-- Screenshot Title -->
    <div class="text-center mt-6">
      <h3 id="screenshot-title" class="text-2xl font-bold text-white font-serif">{screenshots[0].title}</h3>
    </div>

    <!-- Dots Indicator -->
    <div class="flex justify-center mt-8 space-x-2" id="screenshot-dots">
      {screenshots.map((_, index) => (
        <button
          class={`w-3 h-3 rounded-full transition-colors ${index === 0 ? "bg-yellow-500" : "bg-white/30"}`}
          data-dot-index={index}
        />
      ))}
    </div>
  </div>
</section>

<script>
  const screenshots = [
    { title: "Bienvenida" },
    { title: "Hábitos Personalizados" },
    { title: "Dashboard Principal" },
    { title: "Tu Personaje" },
    { title: "Control NoFap" },
    { title: "Cargando Aventura" },
  ];

  let currentIndex = 0;

  function updateCarousel() {
    const images = document.querySelectorAll('[data-screenshot-index]');
    const dots = document.querySelectorAll('[data-dot-index]');
    const title = document.getElementById('screenshot-title');

    images.forEach((img, index) => {
      img.classList.toggle('opacity-100', index === currentIndex);
      img.classList.toggle('opacity-0', index !== currentIndex);
    });

    dots.forEach((dot, index) => {
      dot.classList.toggle('bg-yellow-500', index === currentIndex);
      dot.classList.toggle('bg-white/30', index !== currentIndex);
    });

    if (title) {
      title.textContent = screenshots[currentIndex].title;
    }
  }

  function nextSlide() {
    currentIndex = (currentIndex + 1) % screenshots.length;
    updateCarousel();
  }

  function prevSlide() {
    currentIndex = (currentIndex - 1 + screenshots.length) % screenshots.length;
    updateCarousel();
  }

  document.getElementById('next-screenshot')?.addEventListener('click', nextSlide);
  document.getElementById('prev-screenshot')?.addEventListener('click', prevSlide);

  document.querySelectorAll('[data-dot-index]').forEach((dot, index) => {
    dot.addEventListener('click', () => {
      currentIndex = index;
      updateCarousel();
    });
  });
</script>
