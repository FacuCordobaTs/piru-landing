<section id="beta-signup" class="relative py-20 text-white">
  <div class="absolute inset-0 -z-10 hidden md:block">
    <img
      src="signupdekstop.jpg"
      alt="Fantasy landscape background"
      class="w-full h-full object-cover"
      loading="eager"
    />
  </div>

  <!-- Mobile Background -->
  <div class="absolute inset-0 -z-10 md:hidden">
    <img
      src="signupmobile.jpg"
      alt="Fantasy landscape background"
      class="w-full h-full object-cover"
      loading="eager"
    />
  </div>

  <!-- Overlay -->
  <div class="absolute inset-0 -z-10 bg-black/70"></div>
  
  <div class="relative z-10 max-w-4xl mx-auto px-6 text-center">
    <div class="mb-12">
      <h3 class="text-4xl md:text-5xl font-bold mb-6">
        Únete a la <span class="text-yellow-400">Aventura</span>
      </h3>
      <p class="text-xl text-gray-100 mb-8 text-balance">
        Piru.app está en prueba cerrada. Ingresa tu email y recibe acceso exclusivo a la beta.
      </p>
    </div>

    <!-- Success Message (initially hidden) -->
    <div id="success-message" class="bg-green-900/30 border border-green-500 rounded-lg p-8 max-w-md mx-auto hidden">
      <div class="text-4xl mb-4">✅</div>
      <h4 class="text-xl font-bold mb-2 text-green-400">¡Registro Exitoso!</h4>
      <p class="text-gray-300">Recibirás el acceso a la beta en tu email muy pronto.</p>
    </div>

    <!-- Beta Signup Form -->
    <form id="beta-form" class="max-w-md mx-auto">
      <div class="flex flex-col sm:flex-row gap-4">
        <input
          type="email"
          id="email-input"
          placeholder="tu@email.com"
          required
          class="flex-1 px-6 py-4 rounded-full bg-slate-700 border border-slate-600 text-white placeholder-gray-400 focus:outline-none focus:border-yellow-400 focus:ring-2 focus:ring-yellow-400/20"
        />
        <button
          type="submit"
          id="submit-button"
          class="golden-button disabled:opacity-50 disabled:cursor-not-allowed whitespace-nowrap"
        >
          <span id="button-text" class="golden-button-text">Obtener Acceso</span>
        </button>
      </div>
      <p class="text-sm text-gray-100 mt-4">Solo para Android • Acceso limitado</p>
    </form>

    <div class="mt-16 pt-8 border-t border-slate-700">
      <p class="text-gray-100 text-sm">© 2024 Piru.app • Forja tu leyenda, un hábito a la vez</p>
    </div>
  </div>
</section>

<script>
  const form = document.getElementById('beta-form') as HTMLFormElement;
  const emailInput = document.getElementById('email-input') as HTMLInputElement;
  const submitButton = document.getElementById('submit-button') as HTMLButtonElement;
  const buttonText = document.getElementById('button-text') as HTMLSpanElement;
  const successMessage = document.getElementById('success-message') as HTMLDivElement;

  let isLoading = false;

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const email = emailInput?.value;
    if (!email || isLoading) return;

    // Set loading state
    isLoading = true;
    submitButton.disabled = true;
    buttonText.textContent = 'Enviando...';

    try {
      // Make actual API call to backend
      const response = await fetch('https://api.piru.app/api/auth/beta-signup', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({ email })
      });

      const data = await response.json();
      console.log(data);

      if (!response.ok) {
        throw new Error(data.error || 'Error al registrar email');
      }

      // Show success message
      form.classList.add('hidden');
      successMessage.classList.remove('hidden');
      
      // Reset form
      emailInput.value = '';
      
    } catch (error) {
      console.error('Error submitting form:', error);
      
      // Show error message to user
      const errorMessage = error instanceof Error ? error.message : 'Error al registrar email';
      buttonText.textContent = `Error: ${errorMessage}`;
      submitButton.classList.add('error-button');
      
      // Reset button after 3 seconds
      setTimeout(() => {
        buttonText.textContent = 'Obtener Acceso';
        submitButton.classList.remove('error-button');
      }, 3000);
      
    } finally {
      // Reset loading state
      isLoading = false;
      submitButton.disabled = false;
      buttonText.textContent = 'Obtener Acceso';
    }
  });
</script>
