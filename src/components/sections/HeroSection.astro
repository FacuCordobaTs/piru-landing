<section
  id="hero-section"
  class="relative min-h-screen flex items-center justify-center overflow-hidden bg-background px-6 py-24"
>
  <div class="max-w-4xl mx-auto text-center relative z-10 hero-content">
    <div class="mb-8 hero-text">
      <h1 class="text-6xl md:text-7xl lg:text-8xl font-sans font-bold text-foreground mb-6 text-balance">
        Pedí y pagá desde tu mesa.
      </h1>
      <p class="text-xl md:text-2xl text-muted-foreground max-w-2xl mx-auto text-balance">
        PIRU es una plataforma para restaurantes que automatiza pedidos y pagos usando QR.
      </p>
    </div>

    <div class="flex flex-col sm:flex-row gap-4 justify-center items-center hero-buttons">
      <button class="bg-primary hover:bg-primary/90 text-primary-foreground px-8 py-4 rounded-lg text-lg font-medium transition-colors shadow-lg hover:shadow-xl">
        Solicitar demo
      </button>
      <button class="border-2 border-border hover:border-primary text-foreground px-8 py-4 rounded-lg text-lg font-medium transition-colors">
        Ver cómo funciona
      </button>
    </div>

    <div class="mt-20 grid grid-cols-3 gap-8 max-w-xl mx-auto hero-features">
      <div class="flex flex-col items-center gap-2">
        <div class="w-12 h-12 rounded-full bg-primary/10 flex items-center justify-center">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-primary">
            <rect width="18" height="18" x="3" y="3" rx="2" ry="2"/>
            <path d="M3 9h18"/>
            <path d="M9 21V9"/>
          </svg>
        </div>
        <span class="text-sm text-muted-foreground">Escanear QR</span>
      </div>
      <div class="flex flex-col items-center gap-2">
        <div class="w-12 h-12 rounded-full bg-primary/10 flex items-center justify-center">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-primary">
            <rect width="14" height="20" x="5" y="2" rx="2" ry="2"/>
            <path d="M12 18h.01"/>
          </svg>
        </div>
        <span class="text-sm text-muted-foreground">Pedir fácil</span>
      </div>
      <div class="flex flex-col items-center gap-2">
        <div class="w-12 h-12 rounded-full bg-primary/10 flex items-center justify-center">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-primary">
            <rect width="20" height="14" x="2" y="5" rx="2"/>
            <line x1="2" x2="22" y1="10" y2="10"/>
          </svg>
        </div>
        <span class="text-sm text-muted-foreground">Pagar rápido</span>
      </div>
    </div>
  </div>

  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 scroll-indicator">
    <div class="w-6 h-10 rounded-full border-2 border-foreground/30 flex items-start justify-center p-2 scroll-bounce">
      <div class="w-1 h-2 rounded-full bg-foreground/50"></div>
    </div>
  </div>
</section>

<script>
  // Scroll animations
  document.addEventListener('DOMContentLoaded', () => {
    const heroContent = document.querySelector('.hero-content');
    const heroText = document.querySelector('.hero-text');
    const heroButtons = document.querySelector('.hero-buttons');
    const heroFeatures = document.querySelector('.hero-features');
    const scrollIndicator = document.querySelector('.scroll-indicator');

    // Initial animations
    setTimeout(() => {
      heroText?.classList.add('animate-fade-in-up');
    }, 200);
    
    setTimeout(() => {
      heroButtons?.classList.add('animate-fade-in-up');
    }, 600);
    
    setTimeout(() => {
      heroFeatures?.classList.add('animate-fade-in');
    }, 1000);
    
    setTimeout(() => {
      scrollIndicator?.classList.add('animate-fade-in');
    }, 1500);

    // Parallax effect on scroll
    const section = document.getElementById('hero-section');
    if (section) {
      window.addEventListener('scroll', () => {
        const scrolled = window.scrollY;
        const rate = scrolled * 0.5;
        const opacity = Math.max(0, 1 - scrolled / 500);
        
        if (heroContent) {
          (heroContent as HTMLElement).style.transform = `translateY(${rate}px)`;
          (heroContent as HTMLElement).style.opacity = opacity.toString();
        }
      });
    }
  });
</script>

<style>
  .hero-text {
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 0.8s ease, transform 0.8s ease;
  }

  .hero-text.animate-fade-in-up {
    opacity: 1;
    transform: translateY(0);
  }

  .hero-buttons {
    opacity: 0;
    transform: translateY(20px);
    transition: opacity 0.8s ease, transform 0.8s ease;
  }

  .hero-buttons.animate-fade-in-up {
    opacity: 1;
    transform: translateY(0);
  }

  .hero-features {
    opacity: 0;
    transition: opacity 0.8s ease;
  }

  .hero-features.animate-fade-in {
    opacity: 1;
  }

  .scroll-indicator {
    opacity: 0;
    transition: opacity 0.8s ease;
  }

  .scroll-indicator.animate-fade-in {
    opacity: 1;
  }

  .scroll-bounce {
    animation: bounce 1.5s infinite;
  }

  @keyframes bounce {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(8px);
    }
  }
</style>

