---
const footerLinks = [
  { label: "Características", href: "#" },
  { label: "Cómo funciona", href: "#" },
  { label: "Beneficios", href: "#" },
  { label: "Contacto", href: "#" },
];
---

<footer class="relative bg-secondary px-6 py-24 overflow-hidden">
  <!-- Orange gradient blob -->
  <div class="absolute bottom-0 left-1/2 -translate-x-1/2 w-[800px] h-[600px] pointer-events-none">
    <div class="absolute inset-0 bg-gradient-to-tr from-orange-300 via-orange-200 to-orange-100 opacity-30 blur-3xl rounded-full"></div>
  </div>

  <div class="relative max-w-6xl mx-auto">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-16 items-end">
      <!-- Logo and links -->
      <div>
        <h2 class="footer-logo text-6xl md:text-8xl font-sans font-bold text-foreground">
          PIRU
        </h2>
        <p class="text-muted-foreground mt-4 text-lg">El sistema operativo del restaurante</p>

        <nav class="flex flex-wrap gap-6 mt-8">
          {footerLinks.map((link, i) => (
            <a
              href={link.href}
              class="footer-link text-muted-foreground hover:text-primary transition-colors"
              data-clickable
              data-index={i}
            >
              {link.label}
            </a>
          ))}
        </nav>

        <div class="flex gap-4 mt-8">
          <a
            href="#"
            class="w-10 h-10 rounded-lg bg-background hover:bg-primary/10 flex items-center justify-center transition-colors"
            data-clickable
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-foreground">
              <rect width="20" height="20" x="2" y="2" rx="5" ry="5"/>
              <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/>
              <line x1="17.5" x2="17.51" y1="6.5" y2="6.5"/>
            </svg>
          </a>
          <a
            href="#"
            class="w-10 h-10 rounded-lg bg-background hover:bg-primary/10 flex items-center justify-center transition-colors"
            data-clickable
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-foreground">
              <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6Z"/>
              <rect width="4" height="12" x="2" y="9"/>
              <circle cx="4" cy="4" r="2"/>
            </svg>
          </a>
          <a
            href="#"
            class="w-10 h-10 rounded-lg bg-background hover:bg-primary/10 flex items-center justify-center transition-colors"
            data-clickable
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-foreground">
              <rect width="20" height="16" x="2" y="4" rx="2"/>
              <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/>
            </svg>
          </a>
        </div>
      </div>

      <!-- Contact form -->
      <div class="footer-form">
        <h3 class="text-2xl font-sans font-semibold text-foreground mb-4">Hablemos</h3>
        <p class="text-muted-foreground mb-6">Dejanos tu email y te contactamos para mostrarte PIRU.</p>
        <form id="footer-form" class="space-y-3">
          <input
            type="email"
            id="footer-email"
            placeholder="tu@email.com"
            class="w-full bg-background border border-border rounded-lg px-4 py-3 text-foreground placeholder:text-muted-foreground focus:outline-none focus:ring-2 focus:ring-primary"
          />
          <button
            type="submit"
            class="w-full bg-primary hover:bg-primary/90 text-primary-foreground py-3 rounded-lg font-medium transition-colors"
            data-clickable
          >
            Solicitar demo
          </button>
        </form>
      </div>
    </div>

    <div class="mt-16 pt-8 border-t border-border flex flex-col md:flex-row justify-between items-center gap-4">
      <p class="text-muted-foreground text-sm">© 2025 PIRU. Todos los derechos reservados.</p>
      <div class="flex gap-6">
        <a href="#" class="text-muted-foreground hover:text-foreground text-sm" data-clickable>
          Privacidad
        </a>
        <a href="#" class="text-muted-foreground hover:text-foreground text-sm" data-clickable>
          Términos
        </a>
      </div>
    </div>
  </div>
</footer>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const logo = document.querySelector('.footer-logo');
    const links = document.querySelectorAll('.footer-link');
    const form = document.querySelector('.footer-form');
    const emailInput = document.getElementById('footer-email') as HTMLInputElement;
    const formElement = document.getElementById('footer-form') as HTMLFormElement;

    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            if (entry.target === logo) {
              entry.target.classList.add('animate-fade-in-up');
            }
            if (entry.target === form) {
              entry.target.classList.add('animate-fade-in-up');
            }
            if (links.includes(entry.target)) {
              const index = parseInt((entry.target as HTMLElement).dataset.index || '0');
              setTimeout(() => {
                entry.target.classList.add('animate-fade-in-up');
              }, index * 50);
            }
          }
        });
      },
      { threshold: 0.1 }
    );

    if (logo) observer.observe(logo);
    if (form) observer.observe(form);
    links.forEach((link) => observer.observe(link));

    if (formElement) {
      formElement.addEventListener('submit', (e) => {
        e.preventDefault();
        // Handle form submission
      });
    }
  });
</script>

<style>
  .footer-logo {
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 0.8s ease, transform 0.8s ease;
  }

  .footer-logo.animate-fade-in-up {
    opacity: 1;
    transform: translateY(0);
  }

  .footer-link {
    opacity: 0;
    transform: translateY(20px);
    transition: opacity 0.8s ease, transform 0.8s ease;
  }

  .footer-link.animate-fade-in-up {
    opacity: 1;
    transform: translateY(0);
  }

  .footer-form {
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 0.8s ease, transform 0.8s ease;
  }

  .footer-form.animate-fade-in-up {
    opacity: 1;
    transform: translateY(0);
  }
</style>

